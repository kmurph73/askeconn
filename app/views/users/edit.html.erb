<h1><%= @user.login %>'s Profile</h1>

<%= error_messages_for :user %>
<%= link_to 'View Public Profile', @user %>
<% form_for @user do |f| %>
  <p><label for="profile">Profile:</label><br/>
  <%= f.text_area :profile %></p>
  
  <p>
    <%= f.label :birthday %><br />
    <%= f.date_select :birthday, :start_year => 1900 %>
  </p>

  <p><label for="email">Change Email:</label><br/>
  <%= f.text_field :email %></p>
  
  <p><label for="first_name">First Name:</label><br/>
  <%= f.text_field :first_name %></p>

  <p><label for="last_name">Last Name:</label><br/>
  <%= f.text_field :last_name %></p>
  
  <p><label for="middle_initial">Middle Initial:</label><br/>
  <%= f.text_field :middle_initial %></p>
  
  <p><label for="country">Country:</label><br/>
  <%= f.country_select :country, ["United States"] %>
  
  <p><label for="quote">Blurb about you (to be displayed under your posts):</label><br/>
  <%= f.text_field :quote %></p>
  
  <p><label for="image_url">Image URL:</label><br/>
  <%= f.text_field :image_url %></p>
  
  <p><label for="password">Change Password</label><br/>
  <%= f.password_field :password %></p>

  <p><label for="password_confirmation">Confirm Changed Password</label><br/>
  <%= f.password_field :password_confirmation %></p>

  <p>
    <%= f.submit "Update" %>
  </p>

<% end %>

<%= link_to 'View Public Profile', @user %>