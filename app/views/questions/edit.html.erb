<h1>Editing Question</h1>

<%= error_messages_for :question %>

<% form_for @question do |f| %>
<p><label for="title">Title:</label><br/>
  <%= f.text_field :title %></p>
  
  <p><label for="body">Text:</label><br/>
  <%= f.text_area :body %></p>

  <p>
    <%= f.submit "Update" %>
  </p>

<% end %>

<%= link_to 'Back to question', @question %>