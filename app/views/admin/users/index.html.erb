<center><% form_tag admin_users_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %></center>


<h1>Users</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Login</th>
    <th>Email</th>
  </tr>
<% form_tag deletes_admin_users_path, :method => :delete do %>
<% for user in @users %>
  <tr>
	<td><%= check_box_tag "user_ids[]", user.id %></td>
    <td><%=h user.id %></td>
    <td><%=h user.login %></td>
    <td><%=h user.email %></td>
    <td><%= link_to 'Show', [:admin, user] %></td>
    <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
    <td><%= link_to 'Destroy', [:admin, user], 
      :confirm => 'Are you sure?', :method => :delete %></td>

  </tr>
<% end %>

</table>

<h1>Admins</h1>

<table>
  <tr>
    <th>ID</th>
    <th>Login</th>
    <th>Email</th>
  </tr>

<% for user in @admins %>
  <tr>
	<td><%= check_box_tag "user_ids[]", user.id %></td>
    <td><%=h user.id %></td>
    <td><%=h user.login %></td>
    <td><%=h user.email %></td>
    <td><%= link_to 'Show', [:admin, user] %></td>
    <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
    <td><%= link_to 'Destroy', [:admin, user], 
      :confirm => 'Are you sure?', :method => :delete %></td>

  </tr>
<% end %>
</table>
<%= submit_tag "Delete" %>
<% end %>
