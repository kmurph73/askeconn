<h1>Editing link</h1>

<% form_for([:admin, @link]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :body %><br />
    <%= f.text_field :body %>
  </p>
  
  <p>
    <%= f.label :words %><br />
    <%= f.text_field :words %>
  </p>
  
  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>
  <p>
    <%= f.label :question_id %><br />
    <%= f.text_field :question_id %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', [:admin, @link] %> |
<%= link_to 'Back', admin_links_path %>
